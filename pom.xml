<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Utilities</name>
  <groupId>ball</groupId>
  <artifactId>ball-util</artifactId>
  <version>2.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  <parent>
    <groupId>ball</groupId>
    <artifactId>parent</artifactId>
    <version>3</version>
    <relativePath>../ball/parent/pom.xml</relativePath>
  </parent>
  <properties>
    <jre.version>1.8</jre.version>
  </properties>
  <profiles>
    <profile>
      <id>javadoc</id>
      <activation>
        <file><exists>${basedir}/src/main/javadoc</exists></file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <configuration>
              <tagletpath>${project.build.outputDirectory}:${dependency.runtime.classpath}</tagletpath>
              <tagletArtifacts combine.self="override"/>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies verbose="true">
    <dependency>
      <groupId>jdk</groupId>
      <artifactId>tools</artifactId>
      <optional>true</optional>
    </dependency>
  </dependencies>
</project>
