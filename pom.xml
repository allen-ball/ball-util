<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id: pom.xml,v 1.8 2010-07-17 17:26:45 ball Exp $ -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>iprotium</groupId>
  <artifactId>iprotium-util</artifactId>
  <name>Utilities</name>
  <version>1.0</version>
  <packaging>jar</packaging>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <rt.jar>${java.home}/lib/rt.jar</rt.jar>
    <javase.sourcepath>${java.home}/src</javase.sourcepath>
  </properties>
  <profiles>
    <profile>
      <id>JDK 1.6</id>
      <activation>
        <jdk>1.6</jdk>
      </activation>
      <properties>
        <javase.javadoc.url>
          http://java.sun.com/javase/6/docs/api
        </javase.javadoc.url>
      </properties>
      <dependencies>
        <dependency>
          <groupId>javax.activation</groupId>
          <artifactId>activation</artifactId>
          <version>1.1.1</version>
          <scope>system</scope>
          <systemPath>${rt.jar}</systemPath>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>Mac OS X</id>
      <activation>
        <os><name>Mac OS X</name></os>
      </activation>
      <properties>
        <rt.jar>${java.home}/../Classes/classes.jar</rt.jar>
      </properties>
    </profile>
  </profiles>
  <dependencies verbose="true">
    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>activation</artifactId>
      <version>1.1.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.7.1</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>
